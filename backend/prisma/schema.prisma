// Prisma schema for ExamForge backend
// Run `npx prisma migrate dev` after editing

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  quizzes   Quiz[]
  papers    Paper[]
}

model Subject {
  id        String   @id @default(uuid())
  name      String   @unique
  mainTopics String  // Stored as JSON string
  documents Paper[]
}

model Paper {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  subject     Subject  @relation(fields: [subjectId], references: [id])
  subjectId   String
  title       String
  filePath    String
  uploadDate  DateTime @default(now())
  pageCount   Int
  questions   Question[]
}

model Question {
  id        String   @id @default(uuid())
  paper     Paper   @relation(fields: [paperId], references: [id])
  paperId   String
  text      String
  type      String
  options   String?  // JSON stringified array
  answer    String?
  explanation String?
  marks     Int?
  difficulty String?
  topic     String?
}

model Quiz {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  score     Int
  date      DateTime @default(now())
  questions String   // JSON stringified array of questions/answers
}
